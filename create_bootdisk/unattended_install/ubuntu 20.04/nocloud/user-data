#cloud-config
# https://ubuntu.com/server/docs/install/autoinstall-reference
autoinstall:
  version: 1

  reporting:
    builtin:
      type: print

  apt:
    preserve_sources_list: false
    primary:
        - arches: [i386, amd64]
          uri: "http://archive.ubuntu.com/ubuntu"
        - arches: [default]
          uri: "http://ports.ubuntu.com/ubuntu-ports"
    geoip: true

  storage:
    layout:
      name: direct

  ssh:
    allow-pw: true
    install-server: true

  packages:
    - wireguard
    - git
    - qemu-kvm
    - libvirt-daemon
    - libvirt-clients
    - bridge-utils
    - docker-compose
    - cockpit
    - cockpit-machines
    - i2c-tools
    - jq

  early-commands:
    - dpkg -i --force-all /cdrom/nocloud/deps/*.deb
    - /cdrom/custom/opt/ncubed/bin/led blue

  late-commands:
